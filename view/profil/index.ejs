<%- include('../template/head-start') %>
    <%- include('../template/menu-atas') %>

    <% if (message) { %>
          <div class="alert alert-info alert-dismissible fade show" role="alert">
            <%= message %>
          </div>
          <% } %>

        <h1>Halaman Profil</h1>
        <button class="btn btn-primary">
            Tombol
        </button>
        <i class="fa-solid fa-circle-user me-2"></i> Profil Saya
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <% if ( ! req.session.user[0].foto ) { %>
                        <img src="/gambar/Profile.png" width="50%" class="img-fluid rounded-start" alt="...">
                    <% } else { %>
                        <img src="/upload/<%= req.session.user[0].foto %>" width="50%" class="img-fluid rounded-start" alt="...">
                    <% } %>                </div>
                <a href="/profil/edit-foto">
                    <button><i class="fa-solid fa-pen-to-square"></i></button>
                </a>
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="row d-flex justify-content-between">
                            <h5 class="card-title">
                                <%= req.session.user[0].nama_lengkap %>
                            </h5>
                            <a href="/profil/edit">
                                <button><i class="fa-solid fa-pen-to-square"></i></button>
                            </a>
                        </div>
                        <p class="card-text">
                            Username: <%= req.session.user[0].username %>
                        </p>
                        <p class="card-text">
                            <%= req.session.user[0].bio %>
                        </p>
                        <p class="card-text"><small class="text-body-secondary">Last updated: <%=
                                    moment(req.session.user[0].last_update).startOf('minute').fromNow() %>
                                    <%= moment(req.session.user[0].last_update).format('(DD MMM YYYY HH:mm)') %>
                            </small></p>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../template/head-end') %>