<%- include('../template/head-start') %>
<%- include('../template/menu-atas') %>

<style>
    .ava-icon {
        width: 28px; height:28px; object-fit: cover; margin-right:10px; border-radius: 100%;
    }
    a:hover {
        color: darkblue;
    }
</style>

<div class="container pt-3 pb-5 d-flex flex-column align-items-center">
    <div class="d-flex flex-column col-lg-7 justify-content-center">
        <% if (message) { %>
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fa-solid fa-info-circle me-2"></i><%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <br>
        <h1>Profil</h1>
        <div class="card py-4 px-4 mt-3">
            <div class="d-flex flex-row">
                <div width="220px" class="me-3 position-relative">
                        <a href="/profil/edit-foto" class="btn btn-sm btn-primary position-absolute top-0 end-0">
                            <i class="fa-solid fa-edit"></i>
                        </a>
                        <% if ( ! req.session.user[0].foto ) { %>
                            <img src="/gambar/Profile.png" width="220px" height="220px" class="img-fluid rounded" alt="...">
                        <% } else { %>
                            <img src="/upload/<%= req.session.user[0].foto %>" width="220px" height="220px" class="img-fluid rounded" style="object-fit: cover;" alt="...">
                        <% } %>
                </div>
                <div class="w-100">
                    <div class="card-body">
                        <a href="/profil/edit" class="btn btn-sm btn-primary float-end">
                            <i class="fa-solid fa-edit"></i>
                        </a>
                        <h5 class="card-title"><%= req.session.user[0].nama_lengkap %></h5>
                        <p class="card-text">
                            <%= req.session.user[0].username %>
                        </p>
                        <h5 class="card-title">Bio</h5>
                        <p class="card-text">
                            <%= req.session.user[0].bio %>
                        </p>
                        <p class="card-text">
                            <small class="text-body-secondary">
                                Last updated: <%= moment(req.session.user[0].last_update).startOf('minute').fromNow() %>
                                <%= moment(req.session.user[0].last_update).format('(DD MMM YYYY HH:mm)') %>
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-7">
                
                <h1>Postinganmu</h1>
                <br>

                <% for( let i=0; i < postingan.length; i++ ) { %>
                    <%
                        let carousel_active1 = ''
                        let carousel_active2 = ''
                        let carousel_active3 = ''

                        if (postingan[i].file1) {
                            carousel_active1 = 'active'
                            carousel_active2 = ''
                            carousel_active3 = ''
                        }
                        else if (postingan[i].file2) {
                            carousel_active1 = ''
                            carousel_active2 = 'active'
                            carousel_active3 = ''
                        }
                        else if (postingan[i].file3) {
                            carousel_active1 = ''
                            carousel_active2 = ''
                            carousel_active3 = 'active'
                        }
                    %>

                    <div class="card shadow-sm mb-5">

                        <div>
                            <% if ( ! req.session.user[0].foto ) { %>
                                <img src="/gambar/Profile.png" class="rounded-circle p-2" height="50" style="object-fit: cover;">
                            <% } else { %>
                                <img src="/upload/<%= postingan[i].foto %>" class="rounded-circle p-2" height="50" style="object-fit: cover;">
                            <% } %>
                            <b><%= postingan[i].username %></b>
                            <span class="float-end p-3">
                                <i class="fa-solid fa-ellipsis"></i>
                            </span>
                        </div>

                        <div id="carouselExample<%= postingan[i].id %>" class="carousel slide bg-dark">
                            <div class="carousel-inner">
                                <% if (postingan[i].file1) { %>
                                    <div class="carousel-item <%= carousel_active1 %>">
                                        <img src="/feed/<%=postingan[i].file1%>" class="d-block w-100" height="350" style="object-fit: contain;" alt="...">
                                    </div>
                                <% } %>
                                <% if (postingan[i].file2) { %>
                                    <div class="carousel-item <%= carousel_active2 %>">
                                        <img src="/feed/<%= postingan[i].file2 %>" class="d-block w-100" height="350" style="object-fit: contain;" alt="...">
                                    </div>
                                <% } %>
                                <% if (postingan[i].file3) { %>
                                    <div class="carousel-item <%= carousel_active3 %>">
                                        <img src="/feed/<%= postingan[i].file3 %>" class="d-block w-100" height="350" style="object-fit: contain;" alt="...">
                                    </div>
                                <% } %>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample<%= postingan[i].id %>" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample<%= postingan[i].id %>" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>

                        <div class="card-body">
                            <p class="card-text"><b><%= postingan[i].username %></b> <%= postingan[i].caption %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">
                                        <i class="fa-regular fa-thumbs-up"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">
                                        <i class="fa-regular fa-comment"></i>
                                    </button>
                                </div>
                                <small class="text-body-secondary"><%= moment(postingan[i].created_at).startOf('minute').fromNow() %></small>
                            </div>
                        </div>
                    </div>

                <% } %>
            </div>
        </div>
    </div>
</div>


<%- include('../template/head-end') %>